<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTotalPushups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Общее количество отжиманий за все дни: 0"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etPushups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите количество отжиманий"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddPushups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить отжимания" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сбросить" />

</LinearLayout>
